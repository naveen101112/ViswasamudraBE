@using System.Data
@model VSAssetManagement.IOModels.Store    
<div class="col-sm-12" style="padding:1px">
   <div class="card">
      <div class="card-header">
         <h5>Store</h5>
         <div class="card-header-right">
                <div class="btn-group card-option">
                    @Html.ActionLink("", "Index","Store", "", new {@style="margin-right: 10px;",@class="feather icon-x-circle" })
                </div>
            </div>
      </div>
      <div class="card-body">
         <form id="storeform">
			 @Html.HiddenFor(model=>model.Guid,new{id="hdnGuid"})
			 @Html.AntiForgeryToken()
			 <div class="row">
				<div class="col-md-4">
				   <div class="form-group">
					  <label class="form-label">Store Code</label>
					  <input type="text" class="form-control" asp-for="Code" name="Code" placeholder="Store Code" id="Code">
				   </div>
				</div>
				<div class="col-md-4">
				   <div class="form-group">
					  <label class="form-label">Store Name</label>
					  <input type="text" class="form-control" asp-for="Name" name="Name" placeholder="Store Name" id="Name">
				   </div>
				</div>
				<div class="col-md-4">
				   <div class="form-group">
					  <label class="form-label">Project</label>
					  <input type="text" class="form-control" asp-for="Project" name="Project" placeholder="Project" id="Project">
				   </div>
				</div>
				<div class="col-md-4">
				   <div class="form-group">
					  <label class="form-label">Parent Store</label>
					  <input type="text" class="form-control" asp-for="ParentStore" name="ParentStore" placeholder="ParentStore" id="ParentStore">
				   </div>
				</div>
				<div class="col-md-4">
				   <div class="form-group">
					  <label class="form-label">Store Incharge</label>
					  <input type="text" class="form-control" asp-for="Incharge" name="Incharge" placeholder="Incharge" id="Incharge">
				   </div>
				</div>
				<div class="col-md-4">
				   <div class="form-group">
					  <label class="form-label">Incharge Mobile</label>
					  <input type="text" class="form-control" asp-for="InchargeMobile" name="InchargeMobile" placeholder="InchargeMobile" id="InchargeMobile">
				   </div>
				</div>
			 </div>
			 
			 <button type="submit" class="btn notifications btn-primary" style="float: right;" data-type="success" data-from="top" data-align="right">Submit</button>
         </form>
      </div>
   </div>
</div>
@section Scripts
{
<script src="@Url.Content("../customjs/store.js")"></script>
<style>        
    .table thead th {
        padding:1px;
    }
    .table tbody td {
        padding:1px;
    }
</style>
}