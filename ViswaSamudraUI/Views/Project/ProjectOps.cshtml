@using System.Data
@model VSAssetManagement.IOModels.Project    
<div class="col-sm-12" style="padding:1px">
   <div class="card">
      <div class="card-header">
         <h5>Project</h5>
         <div class="card-header-right">
                <div class="btn-group card-option">
                    @Html.ActionLink("", "Index","Project", "", new {@style="margin-right: 10px;",@class="feather icon-x-circle" })
                </div>
            </div>
      </div>
      <div class="card-body">
         <form id="projectform">
             @Html.HiddenFor(model=>model.Guid,new{id="hdnGuid"})
             @Html.AntiForgeryToken()
             <div class="row">
                <div class="col-md-4">
                   <div class="form-group">
                      <label class="form-label">Project Code</label>                                                       
                      <input type="text" class="form-control" asp-for="ProjectCode" name="ProjectCode" placeholder="Project Code" id="ProjectCode">
                   </div>
                </div>
                <div class="col-md-4">
                   <div class="form-group">
                      <label class="form-label">Project Name</label> 
                      <input type="text" class="form-control" asp-for="ProjectName" name="ProjectName" placeholder="Project Name" id="ProjectName">
                   </div>
                </div>
                <div class="col-md-4">
                   <div class="form-group">
                      <label class="form-label">Project Type</label>
                      <select class="form-control" asp-items="@ViewBag.ProjectType" asp-for="ProjectType">                      
                      </select>
                   </div>
                </div>
                <div class="col-md-4">
                   <div class="form-group">
                      <label class="form-label">Project Start Date</label>
                      <input type="text" class="form-control" asp-for="ProjectStartDate" name="ProjectStartDate" placeholder="Project Start Date" id="ProjectStartDate">
                   </div>
                </div>
                <div class="col-md-4">
                   <div class="form-group">
                      <label class="form-label">End Date</label>
                      <input type="text" class="form-control" asp-for="ProjectEndDate" name="ProjectEndDate" placeholder="Project End Date" id="ProjectEndDate">
                   </div>
                </div>
                <div class="col-md-4">
                   <div class="form-group">
                      <label class="form-label">Project Site Head</label>
                      <input type="text" class="form-control" asp-for="ProjectSiteHead" name="ProjectSiteHead" placeholder="Project Site Head" id="ProjectSiteHead">
                   </div>
                </div>
                <div class="col-md-4">
                   <div class="form-group">
                      <label class="form-label">Site Head Mobile</label>
                      <input type="text" class="form-control" asp-for="SiteHeadMobile" name="SiteHeadMobile" placeholder="Site Head Mobile" id="SiteHeadMobile">
                   </div>
                </div>
                <div class="col-md-4">
                   <div class="form-group">
                      <label class="form-label">GSTIN No</label>
                      <input type="text" class="form-control" asp-for="GstinNo" name="GstinNo" placeholder="GSTIN No" id="GstinNo">
                   </div>
                </div>
                <div class="col-md-4">
                   <div class="form-group">
                      <label class="form-label">CITY/TOWN</label>
                      <input type="text" class="form-control" asp-for="CityTown" name="CityTown" placeholder="City/Town" id="CityTown">
                   </div>
                </div>
                <div class="col-md-4">
                   <div class="form-group">
                      <label class="form-label">Address Line 1</label>
                      <input type="text" class="form-control" asp-for="AddressLine1" name="AddressLine1" placeholder="Address Line 1" id="AddressLine1">
                   </div>
                </div>
                <div class="col-md-4">
                   <div class="form-group">
                      <label class="form-label">Address Line 2</label>
                      <input type="text" class="form-control" asp-for="AddressLine2" name="AddressLine2" placeholder="Address Line 2" id="AddressLine2">
                   </div>
                </div>
             </div>
         
             <button type="submit" class="btn notifications btn-primary" style="float: right;" data-type="success" data-from="top" data-align="right">Submit</button>
         
         </form>
      </div>
   </div>
</div>
@section Scripts
{
<script src="@Url.Content("../customjs/project.js")"></script>
<style>        
.table thead th {
    padding:1px;
}
.table tbody td {
    padding:1px;
}
</style>
}