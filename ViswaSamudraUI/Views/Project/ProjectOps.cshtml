            </div>
            <div class="col-md-4">
               <div class="form-group">
                  <label class="form-label">Project Head</label>
                  @Html.EditorFor(model => model.ProjectHead, new { htmlAttributes = new { @class = "form-control",@placeholder="Project Head",@id="project_head" } })
                  @Html.ValidationMessageFor(model => model.ProjectHead, "", new { @class = "text-danger" })
               </div>
            </div>
            <div class="col-md-4">
               <div class="form-group">
                  <label class="form-label">User Code</label>
                  @Html.EditorFor(model => model.UserCode, new { htmlAttributes = new { @class = "form-control",@placeholder="User Code",@id="user_code" } })
                  @Html.ValidationMessageFor(model => model.UserCode, "", new { @class = "text-danger" })
               </div>
            </div>
         </div>
         
         <button class="btn notifications btn-primary" style="float: right;" data-type="success" data-from="top" data-align="right">Submit</button>
         
         }
      </div>
   </div>
</div>
@section Scripts
{
<script src="@Url.Content("../customjs/project.js")"></script>
<style>        
.table thead th {
    padding:1px;
}
.table tbody td {
    padding:1px;
}
</style>
}