@using System.Data
@model IEnumerable<VSAssetManagement.IOModels.Asset>

<div class="col-sm-12" style="padding:1px">
    <div class="card">
        <div class="card-header">
            <h5 class="h5-body">Asset</h5>
            <div class="card-header-right">                
                <button type="button" class="btn waves-effect waves-light btn-icon btn-primary body-add-record" hidden><i class="feather icon-plus-square"></i></button>
                <div class="btn-group card-option">
                    <a class="feather icon-search" data-toggle="collapse" style="margin-right: 10px;" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample"></a>
                    <button type="button" class="btn dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="feather icon-more-vertical"></i>
                    </button>
                    <ul class="list-unstyled card-option dropdown-menu dropdown-menu-right">
                        <li class="dropdown-item full-card"><a href="#!"><span><i class="feather icon-maximize"></i> maximize</span><span style="display:none"><i class="feather icon-minimize"></i> Restore</span></a></li>
                        <li class="dropdown-item minimize-card"><a href="#!"><span><i class="feather icon-minus"></i> collapse</span><span style="display:none"><i class="feather icon-plus"></i> expand</span></a></li>
                        <li class="dropdown-item reload-card"><a href="#!"><i class="feather icon-refresh-cw"></i> reload</a></li>
                        <li class="dropdown-item close-card"><a href="#!"><i class="feather icon-trash"></i> remove</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="card-body" style="padding:2px 2px 2px 2px">
            <div class="collapse" id="collapseExample">
                <div class="card-body">
                    <p class="mb-0">
                        Asset Under Construction
                    </p>
                </div>
            </div>
        </div>
        <div class="card-body" style="padding:2px 2px 2px 2px">
            <div class="dt-responsive table-responsive">
                <div id="scr-vtr-dynamic_wrapper" class="dataTables_wrapper dt-bootstrap4">                  
                    <div class="row">
                        <div class="col-sm-12">                            
                                <div class="dataTables_scrollBody" style="position: relative; overflow: auto; max-height: 75vh; width: 100%;">
                                <table id="scr-vtr-dynamic" class="table table-striped table-bordered table-hover nowrap dataTable" role="grid" aria-describedby="scr-vtr-dynamic_info" style="width: 100%;">
                                    <thead>
                                        <tr>
                                            <th class="ActionWidth">#</th>
                                            <th class="ActionWidth"  data-breakpoints="xs">S. No</th>
                                            <th data-breakpoints="xs">Code</th>
                                            <th data-breakpoints="xs">Name</th>
                                            <th data-breakpoints="xs">Company Name</th>
                                            <th data-breakpoints="xs">Action By</th>
                                            <th data-breakpoints="xs">Action On</th>
                                            <th data-breakpoints="xs" hidden>Guid</th>
                                            <th data-breakpoints="xs" hidden>Project Guid</th>
                                            <th data-breakpoints="xs" hidden>Store Guid</th>
                                            <th data-breakpoints="xs" hidden>Batch Guid</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            @{
                                                int rowNo = 0;
                                                int eroe = 0;
                                            }
                                            @foreach (var item in Model)
                                            {

                                                rowNo = rowNo + 1;
                                                
                                                <tr role="row">                                                    
                                                    <td>
                                                    <a class="feather icon-eye" data-toggle="collapse" style="margin-right: 10px;" href="@String.Format("#Assetdetails{0}", @rowNo)" role="button" aria-expanded="false" aria-controls="collapseExample"></a>
                                                        @Html.ActionLink("", "Ops","Asset", new { guid=item.Guid  }, new {@class="feather icon-edit" })
                                                </td>
                                                <td>@rowNo</td>
                                                <td>@Html.DisplayFor(modelItem=>item.AssetCode)</td>
                                                <td>@Html.DisplayFor(modelItem=>item.AssetName)</td>
                                                <td>@Html.DisplayFor(modelItem=>item.CompanyName)</td>
                                                <td>@Html.DisplayFor(modelItem=>item.LastUpdatedBy)</td>
                                                <td>@Html.DisplayFor(modelItem=>item.LastUpdatedDateTime)</td>
                                                <td hidden>@Html.DisplayFor(modelItem=>item.Guid)</td>
                                                <td hidden>@Html.DisplayFor(modelItem=>item.ProjectGuid)</td>
                                                <td hidden>@Html.DisplayFor(modelItem=>item.StoreGuid)</td>
                                                <td hidden>@Html.DisplayFor(modelItem=>item.BatchGuid)</td>
                                            </tr>
                                            <tr class="collapse" id="@String.Format("Assetdetails{0}", @rowNo)">
                                                <td colspan="7">
                                                    <div >
                                                        <div class="card-body">
                                                            <p class="mb-0">
                                                                Asset Details
                                                            </p>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            }
                                    </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

   


</div>

