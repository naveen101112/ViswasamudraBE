@using System.Data;
@model IEnumerable<VSAssetManagement.IOModels.LookupType>

<div class="col-sm-12" style="padding:1px;">
                <div class="card">
                    <div class="card-header">
                        <h5>LookUp Type</h5>
                        <div class="card-header-right">
                            <div class="btn-group card-option"> 
                                <a onclick="Closeform(this)" href="#" class="feather icon-file-text" style="margin-right: 10px;display:block"></a>
                                <button type="button" class="btn dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="feather icon-more-horizontal"></i>
                                </button>
                                <ul class="list-unstyled card-option dropdown-menu dropdown-menu-right">
                                    <li class="dropdown-item full-card"><a href="#!"><span><i class="feather icon-maximize"></i> maximize</span><span style="display:none"><i class="feather icon-minimize"></i> Restore</span></a></li>
                                    <li class="dropdown-item minimize-card"><a href="#!"><span><i class="feather icon-minus"></i> collapse</span><span style="display:none"><i class="feather icon-plus"></i> expand</span></a></li>
                                    <li class="dropdown-item reload-card"><a href="#!"><i class="feather icon-refresh-cw"></i> reload</a></li>
                                    <li class="dropdown-item close-card"><a href="#!"><i class="feather icon-trash"></i> remove</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
        <div class="card-body" id="shdiv" style="padding:4px 2px 2px 10px">
            <form id="lookupform"> 
                <input class="form-control" style="display:none" type="text" id="hdnGuid"/>
                @Html.AntiForgeryToken()
                <div class="row">                   
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-label">Name</label>
                            <input class="form-control" placeholder="Look Up Name" type="text" id="Name" name="Name"/>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-label">Code</label>
                            <input class="form-control" placeholder="Look Up  Code" type="text" id="Code" name="Code" />
                        </div>
                    </div>
                </div>
                <button type="reset" class="btn btn-primary" style="float: right;" data-type="success" data-from="top" data-align="right">Clear</button>
                <button type="submit" class="btn notifications btn-primary" style="float: right;" data-type="success" data-from="top" data-align="right">Submit</button>

            </form>
        </div>
                    <div class="card-body" style="padding:2px 2px 2px 2px">
                        <div class="dt-responsive table-responsive">
                            <table id="simpletable" class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th data-breakpoints="xs">Id</th>
                                        <th data-breakpoints="xs">Name</th>
                                        <th data-breakpoints="xs">Code</th>
                                        <th data-breakpoints="xs">Action By</th>    
                                        <th data-breakpoints="xs">Action On</th>
                                        <th data-breakpoints="xs" hidden></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        @{ int rowNo = 0; }
                                         @foreach (var lt in Model)
                                        {
                                        <tr>
                                            <td>
                                                <a onclick="loadPartialview(this)" href="#" class="feather icon-edit"></a> 
                                                 @Html.ActionLink("", "Index","LookUpChild", new { guid=lt.Guid  }, new {@class="feather icon-maximize-2" })
                                            </td>
                                            <td>@(rowNo += 1)</td>
                                            <td>@Html.DisplayFor(modelItem=>lt.Name)</td>
                                            <td>@Html.DisplayFor(modelItem=>lt.Code)</td>
                                            <td>@Html.DisplayFor(modelItem=>lt.LastUpdatedBy)</td>
                                            <td>@Html.DisplayFor(modelItem=>lt.LastUpdatedDateTime)</td>
                                            <td hidden>@Html.DisplayFor(modelItem=>lt.Guid)</td>
                                        </tr>
                                        }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
		
</div>

@section Scripts
    {
    <script src="@Url.Content("../customjs/lookUpType.js")"></script>
    <script src="@Url.Content("../customjs/util.js")"></script>
    <script>
        $(window).on('load', function () {
            setActiveMenu('wingz', 'lookupType');
        });
    </script>

}

